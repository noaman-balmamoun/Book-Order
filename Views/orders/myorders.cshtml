@model IEnumerable<Book_Order.Models.orders>
@{
    Layout = "~/Views/Shared/_Layout - Copier.cshtml";
}
@{
    ViewData["Title"] = "myorders";
}
<partial name="Notification" />

<h1 class="text-center">My orders</h1>


<table class="table">
    <thead>
        <tr>
            <th>
               Book ID
            </th>
           
            <th>
               Quantite
            </th>
            <th>
              Order Date
            </th>
            <th> Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.bookId)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.orderdate)
            </td>
            <td>
                <a class="btn btn-primary"asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
